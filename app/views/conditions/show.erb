<div class="conditions container">
  <div class="row">
       <div class="col s12 m12">
         <div class="card blue-grey darken-1">
           <div class="card-content white-text">
             <span class="card-title">Condition Info</span>
             <ul>
               <li>Date: <%= @condition.date %></li>
               <li>Maximum Temperature: <%= @condition.max_temperature %></li>
               <li>Mean Temperature: <%= @condition.mean_temperature %></li>
               <li>Minimum Temperature: <%= @condition.min_temperature %></li>
               <li>Mean Humidity: <%= @condition.mean_humidity %></li>
               <li>Mean Visibility (Miles): <%= @condition.mean_visibility %></li>
               <li>Mean Wind Speed (MPH): <%= @condition.mean_wind_speed %></li>
               <li>Precipitation (Inches): <%= @condition.precipitation %></li>
               <li>Zip Code: <%= @condition.zipcode %></li>
             </ul>
           </div>
           <div class="card-action">
             <a href="/conditions/<%= @condition.id %>/edit">Edit Condition</a>
             <form action="/conditions/<%= @condition.id %>" method="POST">
               <input type="hidden" name="_method" value="DELETE">
               <input type="submit" value="Delete Weather Condition">
             </form>
           </div>
         </div>
       </div>
     </div>
