<h1>Trips</h1>

<div class="trips">
  <% @trips.each do |trip| %>
    <h3>Duration: <%= trip.duration %></h3>
    <h3>Start Date: <%= trip.start_date %></h3>
    <h3>Start Station: <%= trip.start_station.name %></h3>
    <h3>End Date: <%= trip.end_date %></h3>
    <h3>End Station: <%= trip.end_station.name %></h3>
    <h3>Bike ID: <%= trip.bike_id %></h3>
    <h3>Subscription Type: <%= trip.subscription_id %></h3>
    <h3>Zip Code: <%= trip.zipcode %></h3>
    <%# DO WE NEED TO DISPLAY CREATED_AT AND UPDATED_AT??%>
    <form action="/trips/<%= trip.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete Trip">
    </form>
  <% end %>
  <nav aria-label="...">
    <ul class="pager">
      <li><a href="#">Previous</a></li>
      <li><a href="#">Next</a></li>
    </ul>
  </nav>
</div>

