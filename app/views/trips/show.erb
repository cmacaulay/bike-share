<div class="trip">
  <h2>Trip Info</h2>
  <p>Duration: <%= @trip.duration %></p>
  <p>Start Date: <%= @trip.start_date %></p>
  <p>End Date: <%= @trip.end_date %></p>
  <p>Start Station: <%= @trip.start_station_id %></p>
  <p>End Station: <%= @trip.end_station_id %></p>
  <p>Bike ID: <%= @trip.bike_id %></p>
  <p>Subscription Type: <%= @trip.subscription_id %></p>
  <p>Zip Code: <%= @trip.zipcode %></p>
  <p><a href="/trips/<%= @trip.id %>/edit">Edit Station</a></p>
  <form action="/trips/<%= @trip.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Trip">
  </form>
</div>
