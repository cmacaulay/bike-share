<h1>Edit Trip</h1>
  <form action="/trips/<%= @trip.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT"/>
    <input type="text" name="trip[duration]" value = "<%= @trip.duration %>" placeholder="Duration"/><br>
    <input type="date" name="trip[start_date]" value="<%= @trip.start_date %>" placeholder="Start Date"/><br>
    <input type="date" name="trip[end_date]" value="<%= @trip.end_date %>" placeholder="End Date"/><br>
    <select name="trip[start_station_id]">
      <% @stations.each do |station| %>
        <option value=<%= station.id %>><%= station.name %></option>
      <% end %>
    </select>
    <select name="trip[end_station_id]">
      <% @stations.each do |station| %>
        <option value=<%= station.id %>><%= station.name %></option>
      <% end %>
    </select>
    <input type="integer" name="trip[bike_id]" value="<%=@trip.bike_id %>" placeholder="Bike ID"/><br>
    <input type="text" name="trip[subscription_id]" value= "<%= @trip.subscription %>" placeholder="Subscription Type"/><br>
    <input type="integer" name="trip[zipcode]" value="<%=@trip.zipcode %>" placeholder="Zip Code"/><br>
    <input type="submit" value="Submit Changes"/>
  </form>
